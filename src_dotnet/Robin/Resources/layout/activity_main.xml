<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- DrawerLayout -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- メインコンテンツ -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- メインコンテンツレイアウト -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ウェルカムメッセージ表示エリア -->
            <TextView
                android:id="@+id/welcome_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:visibility="gone"
                android:background="#F5F5F5"
                android:lineSpacingMultiplier="1.5" />

            <!-- チャット画面 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:clipToPadding="false" />
        </LinearLayout>

        <!-- 左上のコントロールエリア（縦並び、端ビタ付け） -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:orientation="vertical">

            <!-- LLMモデル表示・切り替えエリア（控えめデザイン） -->
            <LinearLayout
                android:id="@+id/llm_model_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#D9F5F5F5"
                android:paddingStart="0dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/model_toggle_button"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_popup_sync"
                    android:contentDescription="LLMモデル切り替え"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/current_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="LLM: 読み込み中..."
                    android:textSize="9sp"
                    android:textColor="#757575"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="160dp"
                    android:clickable="false"
                    android:focusable="false" />
            </LinearLayout>

            <!-- LLMエラー表示エリア -->
            <LinearLayout
                android:id="@+id/llm_error_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#D9FFEBEE"
                android:paddingStart="0dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/llm_error_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/stat_notify_error"
                    android:contentDescription="LLM接続エラー"
                    android:padding="0dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/llm_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="接続エラー"
                    android:textSize="9sp"
                    android:textColor="#C62828"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="160dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 左下の音声認識モデル表示エリア（控えめデザイン、端ビタ付け） -->
        <LinearLayout
            android:id="@+id/asr_model_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D9F5F5F5"
            android:paddingStart="0dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/asr_toggle_button"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_popup_sync"
                android:contentDescription="音声認識モデル切り替え"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/current_asr_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ASR: 読み込み中..."
                android:textSize="9sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="240dp"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
    </FrameLayout>

    <!-- ナビゲーションドロワー -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu">

        <!-- フッター（設定を下部に配置） -->
        <include
            layout="@layout/nav_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- ステータステキスト (フローティング表示) -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:padding="12dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:text="@string/listening" />

    <!-- 送信ボタン (FloatingActionButton) - セッター下部中央 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:contentDescription="メッセージを送信"
        android:src="@android:drawable/ic_menu_send"
        app:tint="@android:color/white"
        app:backgroundTint="@color/send_button_color"
        android:enabled="false" />

    <!-- 音声入力ボタン (FloatingActionButton) - 右下 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/mic_button_desc"
        android:src="@android:drawable/ic_btn_speak_now"
        app:tint="@android:color/white" />

    <!-- スワイプヒント：山形矢印 -->
    <Robin.Views.SwipeHintView
        android:id="@+id/swipe_hint"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- モデルダウンロードオーバーレイ -->
    <LinearLayout
        android:id="@+id/download_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E0FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/download_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音声認識モデルをダウンロード中"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/download_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/download_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 MB / 680 MB (0%)"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</FrameLayout>
