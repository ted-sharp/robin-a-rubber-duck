<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- タイトル -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LM Studio 設定"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- プロバイダー選択 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="設定プロファイル"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/provider_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- エンドポイント -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="エンドポイント URL"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/endpoint_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.0.7:1234"
        android:inputType="textUri"
        android:layout_marginBottom="16dp" />

    <!-- モデル名 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="モデル名"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/model_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="model-name"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- APIキー (オプション) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API キー (オプション)"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/api_key_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sk-..."
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <!-- 有効化チェックボックス -->
    <CheckBox
        android:id="@+id/enabled_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="この設定を有効にする"
        android:checked="true"
        android:layout_marginBottom="16dp" />

    <!-- ボタン -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/test_connection_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接続テスト"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャンセル" />
    </LinearLayout>
</LinearLayout>
